alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias ls='ls -AFhG'

alias b='brew'
alias bs='brew search'
alias bi='brew install'
alias bci='brew cask install'

# Remove rucursivly
alias rm='rm -rf'

# Edit hosts file
alias hosts='sudo vim /etc/hosts'

# Get file size of file or folder
alias size="du -hs"

# Moves a file to the MacOS trash
trash () {
  command mv "$@" ~/.Trash
}

# Compress svg or folder of svgs with SVGO
alias svg='svgo --config ~/.svgoConfig -i'
alias svgf='svgo --config ~/.svgoConfig -f'

# Git
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gb=$'git for-each-ref --sort=-committerdate refs/heads/ --format=\'%(HEAD) %(color:yellow)%(refname:short)%(color:white) - %(contents:subject) %(color:dim white)%(authorname) %(committerdate:relative)%(color:reset)\''
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gcm='git checkout master && git pull && git-delete-squashed'
alias gco='git checkout'
alias gd='git diff'
alias gl='git log --graph --oneline --decorate --all'
alias gp='git pull --rebase && git-delete-squashed'
alias gps='git push'
alias gs='git status --short'

glf() {
  command git log --oneline | grep $1
}
