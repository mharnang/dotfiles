alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias ls='ls -AFhG'

alias b='brew'
alias bs='brew search'
alias bi='brew install'
alias bci='brew cask install'

# Remove rucursivly
alias rm='rm -rf'

# Edit hosts file
alias hosts='sudo vim /etc/hosts'

# Get file size of file or folder
alias size="du -hs"

# Moves a file to the MacOS trash
trash () {
  command mv "$@" ~/.Trash
}

# Compress svg or folder of svgs with SVGO
alias svg='svgo --config ~/.svgoConfig -i'
alias svgf='svgo --config ~/.svgoConfig -f'

# Git
alias g='git'
alias ga='git add'
alias gp='git pull'
alias gd='git diff'
alias gps='git push'
alias gs='git status --short'
alias gb='git branch'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gco='git checkout'
alias gcm='git checkout master'
alias gco='git checkout'
alias gl='git log --graph --oneline --decorate --all'
glf() {
  command git log --oneline | grep $1
}

alias start="!f() { git fetch origin && git co -b $@ origin/master; }; f"
alias sync="!git fetch origin && git merge origin/master"
alias recent="!f() { git for-each-ref --sort=-committerdate refs/heads --format='%(HEAD)%(color:yellow)%(refname:short)|%(color:bold green)%(committerdate:relative)|%(color:blue)%(subject)|%(color:magenta)%(authorname)%(color:reset)'|column -ts'|'; }; f"
